<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Nivel UV -->
    <TextView
        android:id="@+id/tvNivelUV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Nivel UV: -"
        android:textSize="24sp"
        android:textColor="#FFFF00"
        android:textStyle="bold" />

    <!-- Estado LED -->
    <TextView
        android:id="@+id/tvEstadoLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNivelUV"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="LED: Apagado"
        android:textSize="20sp"
        android:textColor="#FFFF00"
        android:textStyle="bold" />

    <!-- BotÃ³n Encender/Apagar -->
    <Button
        android:id="@+id/btnEncenderApagar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvEstadoLed"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFF00"
        android:foregroundTint="#000000"
        android:text="Encender LED"
        android:textColor="#000000"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:elevation="4dp" />
</RelativeLayout>
